<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:background="#E0E0E0"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#F5F5F5"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/animeImage"
                    style="@style/MatchParentImage"
                    android:src="@mipmap/placeholder"
                    android:contentDescription="Image Description"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/titleTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/manga_temple_regular"
                            android:text="Tittle" />

                        <TextView
                            android:id="@+id/genreTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/manga_temple_regular"

                            android:text="Genre" />

                        <TextView
                            android:id="@+id/contentTV"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:maxLines="5"
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/manga_temple_regular"

                            android:text="Content" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linLaySeasonEpisode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/plusSeason"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#F5F5F5"
                                android:src="@drawable/add_icon"
                                android:layout_gravity="start" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Season"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/manga_temple_regular"

                                android:layout_marginRight="5dp"/>

                            <ImageButton
                                android:id="@+id/minusSeason"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#F5F5F5"
                                android:src="@drawable/minus_icon"
                                android:layout_gravity="right" />

                            <TextView
                                android:id="@+id/seasonCounter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="0"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/plusEpisode"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#F5F5F5"
                                android:src="@drawable/add_icon"
                                android:layout_gravity="start" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:text="Episode"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"/>

                            <ImageButton
                                android:id="@+id/minusEpisode"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:background="#F5F5F5"
                                android:src="@drawable/minus_icon"
                                android:fontFamily="@font/manga_temple_regular"

                                android:layout_gravity="right" />
                            <TextView
                                android:id="@+id/episodeCounter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"

                                android:text="0"/>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.coordinatorlayout.widget.CoordinatorLayout>


            </LinearLayout>





        </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>